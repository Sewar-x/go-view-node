{
  "apps": [
    {
      "name": "low-code-node",
      "script": "./src/server.js",
      "instances": 1,
      "exec_mode": "fork",
      "log_date_format": "YYYY-MM-DD HH:mm Z",
      "watch": true,
      "ignore_watch": ["node_modules", "logs"],
      "merge_logs": true,
      "min_uptime": "20s",
      "out_file": "./logs/pm2/project_api_out.log",
      "pid_file": "./logs/pm2/project_api.pid",
      "error_file": "./logs/pm2/project_api_err.log",
      "env": {
        "NODE_ENV": "production",
        "logging": "on"
      }
    }
  ]
}
